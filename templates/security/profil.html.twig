{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block main %}
    <div id="registration">

        <h1 class="h3 mb-3 font-weight-normal">Profil</h1>

        {% if app.user %}
            <div class="mb-3">
            <img id="photo_profil" src="/profil/{{ app.user.getUrlPhotoProfil() }}" alt="Photo de profil" title="Photo de profil"><br>
            <h2>{{ app.user.getUsername }}</h2>
            <p> Adresse email : {{ app.user.userIdentifier }}</p>
            <p>Inscris depuis le {{ app.user.getDateInscription|format_datetime('full', 'short') }}</p>
            <br><br>
            <a href="{{ path('app_logout') }}"><button class="btn btn-lg btn-primary">Se déconnecter</button></a>
            </div>
        {% else %}

        <form method="post">
            <label for="username">Adresse e-mail</label><br>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus><br>
            <label for="password">Mot de passe</label><br>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <a class="login_link" href="">J'ai oublié mon mot de passe.</a><br>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </form>
        
        {% endif %}
    </div>
{% endblock %}
